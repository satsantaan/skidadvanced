# SKIDS Advanced - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_DEPLOYMENT_ENV=development
NEXT_PUBLIC_DEPLOYMENT_TYPE=local

# =============================================================================
# AUTHENTICATION (Clerk) - OPTIONAL FOR INTERNAL TESTING
# =============================================================================
# Uncomment and fill these when ready for production authentication
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_actual_key_here
# CLERK_SECRET_KEY=sk_test_your_actual_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# =============================================================================
# PAYMENT GATEWAY (Razorpay) - OPTIONAL FOR INTERNAL TESTING
# =============================================================================
# Uncomment and fill these when ready for payment integration
# NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_here
# RAZORPAY_KEY_SECRET=your_secret_key_here

# =============================================================================
# DATABASE - OPTIONAL FOR INTERNAL TESTING
# =============================================================================
# Uncomment and fill this when ready for database integration
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# ANALYTICS & MONITORING - FOR INTERNAL TESTING
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_FEEDBACK=true  # Disabled - feedback collected manually
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS - FOR INTERNAL TESTING
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_MOCK_DATA=true
NEXT_PUBLIC_DEBUG_MODE=true

# =============================================================================
# INTERNAL TESTING CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TESTING_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
# NEXT_PUBLIC_ENABLE_FEEDBACK_WIDGET=true  # Disabled - manual feedback collection
NEXT_PUBLIC_INTERNAL_ACCESS_CODE=SKIDS2024

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/skids-advanced
MONGODB_DB=skids-advanced

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=skids-advanced-uploads

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_VIDEO_CALLS=true
ENABLE_BEHAVIORAL_ASSESSMENT=true

# HIPAA Compliance
ENCRYPTION_KEY=your-encryption-key-here
AUDIT_LOG_ENABLED=true

# Development
NODE_ENV=development
LOG_LEVEL=debug

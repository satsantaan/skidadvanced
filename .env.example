# SKIDS Advanced - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_DEPLOYMENT_ENV=development
NEXT_PUBLIC_DEPLOYMENT_TYPE=local

# =============================================================================
# AUTHENTICATION (Clerk) - OPTIONAL FOR INTERNAL TESTING
# =============================================================================
# Uncomment and fill these when ready for production authentication
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_actual_key_here
# CLERK_SECRET_KEY=sk_test_your_actual_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# =============================================================================
# PAYMENT GATEWAY INTEGRATIONS - COMPREHENSIVE PROVISIONS
# =============================================================================

# Razorpay Configuration
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_here
RAZORPAY_KEY_SECRET=your_secret_key_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here
RAZORPAY_ENVIRONMENT=sandbox

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_ENVIRONMENT=sandbox

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox

# Square Configuration
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_WEBHOOK_SIGNATURE_KEY=your_square_webhook_signature_key_here
SQUARE_ENVIRONMENT=sandbox

# Payment Gateway Feature Flags
ENABLE_RAZORPAY=true
ENABLE_STRIPE=false
ENABLE_PAYPAL=false
ENABLE_SQUARE=false
USE_MOCK_PAYMENTS=true

# =============================================================================
# DATABASE - OPTIONAL FOR INTERNAL TESTING
# =============================================================================
# Uncomment and fill this when ready for database integration
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# ANALYTICS & MONITORING - FOR INTERNAL TESTING
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_FEEDBACK=true  # Disabled - feedback collected manually
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS - FOR INTERNAL TESTING
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_MOCK_DATA=true
NEXT_PUBLIC_DEBUG_MODE=true

# =============================================================================
# INTERNAL TESTING CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TESTING_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
# NEXT_PUBLIC_ENABLE_FEEDBACK_WIDGET=true  # Disabled - manual feedback collection
NEXT_PUBLIC_INTERNAL_ACCESS_CODE=SKIDS2024

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/skids-advanced
MONGODB_DB=skids-advanced

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=skids-advanced-uploads

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# VENDOR INTEGRATION PROVISIONS
# =============================================================================

# NutreeAI Integration
NUTREEAI_API_KEY=your_nutreeai_api_key_here
NUTREEAI_BASE_URL=https://nutreeai.netlify.app
NUTREEAI_WEBHOOK_SECRET=your_nutreeai_webhook_secret_here

# Shanti Pranayama Coach Integration
SHANTI_API_KEY=your_shanti_api_key_here
SHANTI_BASE_URL=https://pranayama-coach-shanti-969652507861.us-west1.run.app
SHANTI_WEBHOOK_SECRET=your_shanti_webhook_secret_here

# Vendor Onboarding System
VENDOR_ONBOARDING_ENABLED=true
VENDOR_AUTO_APPROVAL=false
VENDOR_VERIFICATION_REQUIRED=true

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com/api/webhooks
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_VIDEO_CALLS=true
ENABLE_BEHAVIORAL_ASSESSMENT=true
ENABLE_VENDOR_ONBOARDING=true
ENABLE_THIRD_PARTY_INTEGRATIONS=true
ENABLE_ROI_ANALYTICS=true

# HIPAA Compliance
ENCRYPTION_KEY=your-encryption-key-here
AUDIT_LOG_ENABLED=true

# Development
NODE_ENV=development
LOG_LEVEL=debug
